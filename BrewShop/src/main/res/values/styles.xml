<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="actionModeBackground">@color/color_primary</item>
    </style>

    <style name="FillParent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/color_primary</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_light_primary</item>
    </style>

    <style name="AppLayout" parent="AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="NavigationCategory" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_light_primary</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationList" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@color/color_primary_dark</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="ItemList" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:choiceMode">none</item>
        <item name="android:divider">@color/color_transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="RecipeStat" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="RecipeStatRight" parent="RecipeStat">
        <item name="android:layout_gravity">right</item>

    </style>

    <style name="RecipeRating">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:src">@drawable/hops</item>
    </style>

    <style name="RecipeGroupLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="RecipeIngredient">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="RecipeHeader" parent="FillParent">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="RecipeEditLabel">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="RecipeEditValue">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:maxLength">5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="RecipeEditUnit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="Card">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/color_white</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">2dp</item>
    </style>

    <style name="IngredientIcon">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#d0ffffff</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="VerticalSeparator">
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="HorizontalSeparator">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">@color/color_gray</item>
    </style>

    <style name="MySpinner">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="CheckMark">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/green_check</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="IngredientDetails">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:textColor">@color/text_dark_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
