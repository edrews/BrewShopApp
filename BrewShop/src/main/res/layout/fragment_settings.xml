<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FillParent">

    <LinearLayout style="@style/FillParent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/root_view"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView style="@style/CardTitle"
            android:id="@+id/hop_addition_title"
            android:text="App Settings"/>

        <android.support.v7.widget.CardView
            style="@style/Card">

            <LinearLayout
                style="@style/FillParent"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/RecipeEditLabel"
                        android:text="Measurement" />

                    <Spinner android:id="@+id/measurement_units_spinner"
                        style="@style/MySpinner"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/RecipeEditLabel"
                        android:text="Extract Scale" />

                    <Spinner android:id="@+id/extract_units_spinner"
                        style="@style/MySpinner"/>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>