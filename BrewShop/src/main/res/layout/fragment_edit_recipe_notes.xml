<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FillParent">

    <android.support.v7.widget.CardView style="@style/Card">

        <LinearLayout
            style="@style/FillParent"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Notes"
                android:textSize="22sp" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_gray"/>

            <EditText
                android:id="@+id/recipe_notes"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:gravity="left|top"
                android:hint="@string/add_recipe_notes"
                android:maxLength="@integer/max_notes_characters"
                android:maxLines="@integer/max_notes_characters"
                android:minLines="10"
                android:inputType="textCapSentences|textMultiLine"
                android:textSize="16sp">
                <requestFocus/>
                </EditText>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>
